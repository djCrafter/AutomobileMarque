<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MarqueFragment">


    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <TextView
                android:text="Automobile Marque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TitleTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"/>

        <TextView
                android:text="Click a marque to lern abut it."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AnnotationTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/TitleTextView"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textSize="14sp"/>
        <TableLayout
                android:id="@+id/table_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AnnotationTextView"
                android:layout_height="0dp"
                android:layout_width="match_parent">

            <TableRow android:layout_weight="1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                <ImageButton
                        android:tag="BMW"
                        android:src="@drawable/bmw"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton1"/>
                <ImageButton
                        android:tag="Citroen"
                        android:src="@drawable/citroen"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton2"/>
                <ImageButton
                        android:tag="Ford"
                        android:src="@drawable/ford"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton3"/>
                <ImageButton
                        android:tag="LandRover"
                        android:src="@drawable/landrover"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton4"/>
            </TableRow>
            <TableRow android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">
                <ImageButton
                        android:tag="Mercedes"
                        android:src="@drawable/mercedes"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton5"/>
                <ImageButton
                        android:tag="Mitsubishi"
                        android:src="@drawable/mitsubishi"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton6"/>
                <ImageButton
                        android:tag="Nissan"
                        android:src="@drawable/nissan"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton7"/>
                <ImageButton
                        android:tag="Skoda"
                        android:src="@drawable/skoda"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton8"/>
            </TableRow>
            <TableRow android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">
                <ImageButton
                        android:tag="Subaru"
                        android:src="@drawable/subaru"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton9"/>
                <ImageButton
                        android:tag="Tesla"
                        android:src="@drawable/tesla"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton10"/>
                <ImageButton
                        android:tag="Toyota"
                        android:src="@drawable/toyota"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton11"/>
                <ImageButton
                        android:tag="Volkswagen"
                        android:src="@drawable/volkswagen"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageButton12"/>
            </TableRow>
        </TableLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>